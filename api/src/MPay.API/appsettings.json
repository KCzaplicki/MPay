{
  "ConnectionStrings": {
    "MPayConnectionString": "Data Source=MPayDatabase.db"
  },
  "Serilog": {
    "Using":  [ "Serilog.Sinks.Console", "Serilog.Sinks.File", "Serilog.Sinks.RollingFile" ],
    "MinimumLevel": {
        "Default": "Debug",
        "Override": {
            "Microsoft": "Warning",
            "System": "Warning"
        }
    },
    "WriteTo": [
      { "Name": "Console" },
      { "Name": "RollingFile", "Args": { "pathFormat": "Logs/log-{Date}.txt" } }
    ]
  },
  "AllowedHosts": "*",
  "PurchaseTimeout": {
    "IntervalInSeconds": 60,
    "PurchaseCreationTimeoutInMinutes": 15,
    "PurchaseLastPaymentTimeoutInMinutes": 15,
    "PurchaseWithPaymentsTimeoutInMinutes": 60 
  }
}
